<Window x:Class="KantinOtomasyon.Kullanıcı"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KantinOtomasyon"
        mc:Ignorable="d"
        Title="Kullanıcı" Height="450" Width="800">
    <Grid>
        <DataGrid Name="grdusers" HorizontalAlignment="Left" Height="351" Margin="48,34,0,0" VerticalAlignment="Top" Width="708">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Adı" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Path=Surname}" Header="Soyadı" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Path=UserName}" Header="Kullanıcı Adı" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Path=CardNumber}" Header="Kart Numarası" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Path=InsertDate}" Header="Kayıt Tarihi" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding Path=AuthType}" Header="Kullanıcı Tipi" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
